.fixed-btn {
  display: flex;
  justify-content: center;
  padding: 20px 0 10px;
  background: #fff;
  box-sizing: border-box;
}

.fixed-btn .find {
  width: 670rpx;
  height: 48px;
  line-height: 48px;
  text-align: center;
  background: linear-gradient(181deg, rgba(60, 180, 241, 1) 0%, rgba(28, 125, 223, 1) 100%);
  box-shadow: 0px 12rpx 20rpx 8rpx rgba(75, 154, 232, 0.5);
  border-radius: 2em;
  color: #fff;
  font-size: 32rpx;
}

.fixed-btn .my-xq {
  position: relative;
  width: 100%;
  height: 84px;
  box-sizing: border-box;
}

.fixed-btn .my-xq .posa {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  padding: 0 20px;
  box-sizing: border-box;
  color: #fff;
}

.fixed-btn .posa {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.fixed-btn .posa view {
  display: flex;
  align-items: center;
}

.fixed-btn .btm {
  margin-top: 10px;
  font-size: 32rpx;
}

.van-sticky-wrap--fixed {
  padding: 0 20rpx;
  background: #fff;
}

.benefit {
  padding-top: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
  font-size: 24rpx;
}

.benefit .item {
  display: flex;
  align-items: center;
}

.benefit .icon {
  width: 40rpx;
  height: 40rpx;
}

.benefit .icon1 {
  width: 40rpx;
  height: 42rpx;
}

.benefit image {
  margin-right: 12rpx;
}

.hot {
  position: relative;
  z-index: 1;
  margin-top: 38rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  border-radius: 8rpx;
}

.hot image {
  width: 40rpx;
  height: 40rpx;
}

.hot .job {
  display: flex;
  flex: 1;
  justify-content: space-around;
  align-items: center;
}
