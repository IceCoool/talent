<view class="fil-top posr">
  <image src="/images/city-bg.png"></image>
  <view class="fil-title">
    <view>选择城市</view>
    <text class="txt">选择您招聘的城市</text>
  </view>
</view>
<view class="boxSh fil-mod" style="margin-bottom: 40rpx;">
  <view class="fil-inp">
      <input class="inp" type="text" placeholder="请输入城市名称搜索"></input>
  </view>
  <view class="local">
    <text></text>
    <text>当前城市：</text>
    <text class="city">北京</text>
  </view>
  <view class="item">
    <text class="item-title">热门城市</text>
    <van-radio-group class="item-list" value="{{sortValue}}" bind:change="onChange">
      <van-radio name="{{1}}" use-icon-slot>
        <text slot="icon" class="label {{sortValue == '1'?'on':''}}">北京</text>
      </van-radio>
      <van-radio name="{{2}}" use-icon-slot>
        <text slot="icon" class="label {{sortValue == '2'?'on':''}}">上海</text>
      </van-radio>
      <van-radio name="{{3}}" use-icon-slot>
        <text slot="icon" class="label {{sortValue == '3'?'on':''}}">深圳</text>
      </van-radio>
      <van-radio name="{{4}}" use-icon-slot>
        <text slot="icon" class="label {{sortValue == '4'?'on':''}}">杭州</text>
      </van-radio>
      <van-radio name="{{5}}" use-icon-slot>
        <text slot="icon" class="label {{sortValue == '5'?'on':''}}">武汉</text>
      </van-radio>
    </van-radio-group>
  </view>
