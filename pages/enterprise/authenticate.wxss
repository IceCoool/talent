/* pages/mine/enterprise/authenticate.wxss */

page {
  font-family: PingFangSC-Medium, 'PingFang SC';
  background: #f3f3f3;
}

.auth-blue-bk {
  background-color: #1c7ddf;
  height: 34px;
}

.auth-page-wrap {
  background-color: white;
  border-radius: 24px 24px 0px 0px;
  padding: 16px 16px;
}

.auth-none-text {
  color: #6d7176;
  text-align: center;
  position: absolute;
  /* 默认居中 */
  top: calc(50% + 40px);
  left: 0;
  right: 0;
}

.auth-section-title {
  font-size: 15px;
  font-family: PingFangSC-Semibold, 'PingFang SC';
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  margin: 24px 0 16px;
}

/* 图片容器：包含图片和底部文字 */

.auth-img-wrap {
  background-color: rgba(0, 122, 255, 0.1);
  border-radius: 2px;
  padding: 10px 10px 0 10px;
  width: fit-content;
  margin: 0 auto 10px auto;
  position: relative;
}

/* 图片底部文字 */

.auth-img-title {
  font-size: 13px;
  font-weight: 500;
  color: rgba(0, 122, 255, 1);
  text-align: center;
  height: 30px;
  line-height: 30px;
}

/* 添加图片的icon */

.auth-add-icon {
  width: 42px;
  height: 42px;
  position: absolute;
  /* 默认居中 */
  top: calc(50% - 30px);
  left: calc(50% - 21px);
}

/* 文本段 */

.auth-text-section {
  background: rgba(250, 250, 252, 1);
  border-radius: 2px;
  padding: 12px 16px;
  font-size: 13px;
  line-height: 24px;
  margin-top: 10px;
}

.auth-label {
  margin-right: 20px;
  flex-shrink: 0;
}

.auth-value {
  text-align: right;
  font-family: PingFangSC-Regular, 'PingFang SC';
  font-weight: 400;
  color: rgba(109, 113, 118, 1);
  flex: 1;
}

.auth-placeholder {
  color: #a7a7b5;
}

/* 营业执照 */

.auth-img-license {
  width: 160px;
  height: 188px;
  background-color: white;
  border-radius: 2px;
}

.auth-license-notes {
  font-family: PingFangSC-Regular, 'PingFang SC';
  font-weight: 400;
  color: rgba(109, 113, 118, 1);
}

.auth-license-notes-title {
  background: linear-gradient(90deg, rgba(58, 152, 255, 1) 0%, rgba(0, 122, 255, 1) 100%);
  box-shadow: 0px 2px 4px 0px rgba(74, 144, 226, 0.5);
  border-radius: 6px 6px 6px 0px;
  font-size: 13px;
  font-family: PingFangSC-Medium, 'PingFang SC';
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  width: fit-content;
  padding: 4rpx 14rpx;
  line-height: 18px;
  margin-bottom: 10px;
}

image {
  display: block;
}

/* 身份证 */

.auth-img-idcard {
  width: 192px;
  height: 122px;
  border-radius: 2px;
  background-color: white;
}

/* 其他资质 */

.auth-img-other {
  width: 100px;
  height: 100px;
  border-radius: 2px;
  background-color: white;
}

.auth-delete-icon {
  width: 23px;
  height: 24px;
  padding: 8px 9px;
  border-radius: 50%;
  position: absolute;
  top: 0;
  right: 0;
}

.auth-text-gray {
  font-family: Avenir-Roman, Avenir;
  color: #6d7176;
}

.submit-btn {
  height: 44px;
  line-height: 44px;
  font-size: 15px;
  color: white;
  text-align: center;
  border-radius: 4px;
  margin-top: 30px;
  margin-bottom: calc(16px + constant(safe-area-inset-bottom));
  margin-bottom: calc(16px + env(safe-area-inset-bottom));
}

.btn-enable {
  background: linear-gradient(90deg, rgba(58, 152, 255, 1) 0%, rgba(0, 122, 255, 1) 100%);
}

.btn-disable {
  background: rgba(153, 153, 153, 1);
}

/* 模态框按钮，其余样式使用公共的app.wxss */

.modal-btn {
  margin: 0 30px;
  width: 180px;
}

.company-info {
  margin: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.company-info .info-top {
  padding: 20rpx;
  background: #fff;
}

.company-info .info-top .name {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: 500;
}

.company-info .status {
  padding: 4rpx 15rpx;
  font-size: 24rpx;
  color: #999;
  background: #e5e5e5;
  border-radius: 8rpx;
  font-weight: normal;
}

.company-info .status.on {
  background: #007aff;
  color: #fff;
}

.company-info .info-top .num {
  font-size: 24rpx;
  color: #939393;
}

.auth-error {
  margin: 20rpx;
  padding: 20rpx;
  background: #fff0de;
  color: #f59a23;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
}

.oper-btns {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.oper-btns .btn {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 2em;
  text-align: center;
}

.oper-btns .sure {
  flex: 1;
  color: #fff;
  background: linear-gradient(181deg, rgba(60, 180, 241, 1) 0%, rgba(28, 125, 223, 1) 100%);
  box-shadow: 0px 6rpx 20rpx 8rpx rgba(75, 154, 232, 0.5);
  border: 1px solid rgba(75, 154, 232, 1);
}

/*模态框*/
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(15,22,38,0.65);
  z-index: 1000;

  transition: all 0.3s ease-in;

  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.modal-dialog {
  position: relative;
  z-index: 1001;
  background-color: white;
  border-radius: 6px;
  margin: 230rpx 12%;
  text-align: center;
  padding: 0 8% 24px;
  min-width: 60%;
}

/* 徽章形状 */
.modal-icon-badge {
  width: 67px;
  height: 76px;
  margin-top: -34px;
  display: inline-block;
}

/* 用于标签的 */
.modal-icon-tag {
  width: 70px;
  height: 76px;
  margin-top: -38px;
  display: inline-block;
}

/* 头像形状 */
.modal-icon-header {
  width: 70px;
  height: 76px;
  margin-top: -40px;
  display: inline-block;
}

.modal-title {
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: center;

  margin: 10px 0 5px;
}

.modal-content {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #AAAEB0;
  letter-spacing: 0;
  text-align: center;
  line-height: 28px;
}

.modal-btns {
  margin-top: 30px;
  font-family: PingFangSC-Medium, 'PingFang SC';
  font-size: 15px;
  text-align: center;
}

.modal-btn {
  border-radius: 2px;
  height: 34px;
  line-height: 34px;
}

.modal-cancel {
  color: #007AFF;
  background-color: rgba(0,122,255, 0.1);
}

.modal-ok {
  color: white;
  background:linear-gradient(90deg,rgba(58,152,255,1) 0%,rgba(0,122,255,1) 100%);
}