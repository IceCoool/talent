/* pages/card/create/create.wxss */
.cell-item {
  background:rgba(250,250,252,1);
  border-radius:2px;

  font-size:13px;
  font-weight:500;
  color:rgba(51,51,51,1);

  text-align: center;

  padding: 16px; 

  margin: 10px 16px;
}

.cell-item-val {
  color: #6D7176;
}

.create-btn {
  height:44px;
  background:linear-gradient(90deg,rgba(58,152,255,1) 0%,rgba(0,122,255,1) 100%);
  border-radius:4px;

  line-height: 44px;
  text-align: center;

  font-size:15px;
  font-weight:500;
  color:rgba(255,255,255,1);

  position: fixed;
  left: 16px;
  right: 16px;
  bottom: 10px;
  bottom: calc(10px + constant(safe-area-inset-bottom));
  bottom: calc(10px + env(safe-area-inset-bottom));
}

/* 模态框按钮，其余样式使用公共的app.wxss */
.modal-btn {
  margin: 0 30px;
  width: 180px;
}