/* pages/card/create/search.wxss */
/* 输入部分 */
.search-input-wrap {
  padding: 16px 0;
}
.flex-h-center-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.search-input-label {
  font-size:15px;
  font-family:PingFangSC-Regular,'PingFang SC';
  font-weight:400;
  color: #333;
}

.search-input {
  margin: 10px 0;
  background-color: #F0F1F2;
  padding: 0 16px;

  font-size:13px;
  font-family:PingFangSC-Regular,'PingFang SC';
  font-weight:400;

  border-radius: 17px;
  height: 34px;
  line-height: 34px;
  min-height: 34px;
}

.seach-input-placeholder {
  color:rgba(109,113,118,1);
}

.search-submit-btn {
  height:44px;
  background-color:rgba(0,122,255,0.1);
  box-shadow:0px 2px 6px 2px rgba(74,144,226,0.03);
  border-radius:4px;

  margin: 5vh 10% 0 10%;

  font-size:15px;
  font-family:PingFangSC-Medium,'PingFang SC';
  font-weight:700;
  color: #007AFF;
  line-height: 44px;
  text-align: center;
}

/* 搜索结果 */
.search-result-blue-bk {
  background-color: #007AFF;
  height: 34px;
}

.search-result-wrap {
  background-color: white;
  border-radius:24px 24px 0px 0px;
  margin-top: -20px;

  padding: 30px 16px;
}

.search-result-label {
  font-size:15px;
  font-family:PingFangSC-Semibold,'PingFang SC';
  font-weight:600;
  color:rgba(51,51,51,1);
}

.search-result-nothing {
  margin-top: 100px;

  font-size:15px;
  font-family:PingFangSC-Semibold,'PingFang SC';
  font-weight:600;
  color:rgba(51,51,51,1);
}

.search-result-nothing-icon {
  width: 150px;
  height: 116px;
  margin-bottom: 20px;
}

.search-result-nothing-tip {
  font-size:12px;
  font-family:PingFangSC-Medium,'PingFang SC';
  font-weight:700;
  color:rgba(109,113,118,1);
  margin-top: 10px;
}

.search-result-item {
  background:rgba(250,250,252,1);
  border-radius:2px;

  height: 52px;
  padding: 0 16px;

  margin-bottom: 10px;

  font-size:13px;
  font-family:PingFangSC-Medium,'PingFang SC';
  font-weight:700;
  color:rgba(51,51,51,1);
}

.search-result-item-icon {
  background: #007AFF;
  width: 20px;
  height: 20px;
  line-height: 20px;
  border-radius: 50%;

  margin-right: 10px;
  flex-shrink: 0;

  font-size: 10px;
  font-family: PingFangSC-Semibold, 'PingFang SC';
  font-weight: 600;
  color: white;
  text-align: center;
}

.search-result-item-name {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  flex: 1;
}

.search-result-item-arrow {
  width: 12rpx;
  height: 12rpx;
  transform: rotate(45deg);
  border-top: 1px solid #C4C4CA;
  border-right: 1px solid #C4C4CA;
}