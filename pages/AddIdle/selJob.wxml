<view class="fil-top posr">
  <image src="/images/xq-bg.png"></image>
  <view class="fil-title">
    <view>选择职位类型</view>
    <text class="txt">选择您需求的职位名称</text>
  </view>
</view>
<view style="padding-bottom:100rpx;">
  <view class="boxSh fil-mod">
    <view class="fil-inp">
      <input class="inp" type="text" placeholder="请输入职位名称搜索"></input>
      <text class="xziconfont xzicon-search"></text>
    </view>
    <block wx:for="{{jobList}}" wx:key="index">
      <view class="item" wx:for="{{item.children}}" wx:for-item="itemType" wx:key="index">
        <text class="item-title">{{itemType.cnname}}</text>
        <view class="item-list">
          <text class="label {{selCode == itemType.itemCode?'on':''}}" data-code="{{itemType.itemCode}}" bindtap="onChange">不限</text>
          <text class="label {{selCode == jobItem.itemCode?'on':''}}" wx:for="{{itemType.children}}" wx:for-item="jobItem" data-code="{{jobItem.itemCode}}" bindtap="onChange" wx:key="index">{{jobItem.cnname}}</text>
        </view>
      </view>
    </block>

  </view>
</view>

<view class="oper-btns">
  <text class="btn sure">完成</text>
</view>