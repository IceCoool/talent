<view id="idle-filter" class="idle-filter">
  <view class="lf">
    <text class="Mrt30 {{queryType == 1 ? 'on':''}}" wx:if="{{hasRequest}}">推荐</text>
    <text class="{{queryType == 2 ? 'on':''}}">最新</text>
    <text class="num"></text>
  </view>
  <view class="rt">
    <view class="fil-type" data-url="/pages/Filter/selCity" bindtap="tapEvent">
      <text>{{cityName}}</text>
      <text class="icon"></text>
    </view>
    <view class="fil-type" data-url="/pages/Filter/selAll" bindtap="tapEvent">
      <text>筛选</text>
      <text class="icon"></text>
    </view>
  </view>
</view>