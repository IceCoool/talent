/* components/staff-filter/index.wxss */

.fil-top {
  height: 268rpx;
}

.fil-top .fil-title {
  position: absolute;
  top: 50rpx;
  left: 40rpx;
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
}

.fil-top .fil-title .txt {
  margin-top: 20rpx;
  font-size: 26rpx;
  font-weight: normal;
}

.fil-mod {
  margin-bottom: 25rpx;
  position: relative;
  top: -65rpx;
  left: 30rpx;
  width: 690rpx;
  min-height: 75%;
  padding: 1rpx 40rpx 50rpx;
  background: #fff;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.fil-mod .item {
  margin-top: 50rpx;
}

.fil-mod .item .item-title {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}

.fil-mod .item .item-list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.fil-mod .item-list .label {
  display: inline-block;
  margin: 24rpx 20rpx 0 0;
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 8rpx;
  box-sizing: border-box;
  border: 1px solid transparent;
}

.fil-mod .item-list .label.on {
  background: #e6f0ff;
  border-color: #4b9ae8;
  color: #4b9ae8;
}

.oper-btns {
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.oper-btns .btn {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 2em;
  text-align: center;
}

.oper-btns .clear {
  width: 290rpx;
  color: #1c7ddf;
  background: rgba(230, 240, 255, 1);
  box-shadow: 0px 6rpx 20rpx 8rpx rgba(75, 154, 232, 0.3);
  border: 1px solid rgba(75, 154, 232, 1);
}

.oper-btns .sure {
  width: 400rpx;
  color: #fff;
  background: linear-gradient(181deg, rgba(60, 180, 241, 1) 0%, rgba(28, 125, 223, 1) 100%);
  box-shadow: 0px 6rpx 20rpx 8rpx rgba(75, 154, 232, 0.5);
  border: 1px solid rgba(75, 154, 232, 1);
}
